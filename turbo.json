{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [

  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": true,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "type:check": {
      "dependsOn": ["^type:check"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "db:migrate": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["db:migrate"],
      "cache": false,
      "persistent": true
    }
  }
}
